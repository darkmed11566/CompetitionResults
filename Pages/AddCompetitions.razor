@inject CompetitionResults.Data.Repository.CompetitionRepository competitionRepository; 
@page "/addCompetitions"
@using EnumsAndConstants

<div class="row">
    <div class="col">
        <div class="col">
            Conpetition Name
        </div>
        <input class=" form-control" placeholder="Conpetition Name" @bind="competitionModel.Name" />
        <div class="col">
            Start Data
        </div>
        <input class=" form-control" type="date" placeholder="Competition Start Data" @bind="competitionModel.StartDate" />
        <div class="col">
            End Data
        </div>
        <input class=" form-control" type="date" placeholder="Competition End Data" @bind="competitionModel.EndtDate" />
        <div class="col">
            Rating
            <input class=" form-control" type="checkbox" @bind="competitionModel.IsRated" />
        </div>
        <div class="col">
            Full
            <input class=" form-control" type="checkbox" @bind="competitionModel.IsFull" />
        </div>
        <div class="col">
            Country
        </div>
        <select class=" form-control" name="Country" @bind="competitionModel.Country">
            @foreach (var country in CountryForSelect)
            {
                <option value="@country">
                    @country;
                </option>
            }
        </select>
        <div class="col">
            Type
        </div>
        <select class=" form-control" name="Type" @bind="competitionModel.Type">
            @foreach (var type in TypesForSelect)
            {
                <option value="@type">
                    @type;
                </option>
            }
        </select>
        <div class="col">
            Status
        </div>
        <select class=" form-control" name="Status" @bind="competitionModel.Status">
            @foreach (var status in StatusForSelect)
            {
                <option value="@status">
                    @status;
                </option>
            }
        </select>

        <div class=" col">
            <button class=" btn btn-success" @onclick="SaveCompetition">Save</button>
        </div>
    </div>
</div>

<div class=" container-fluid">
    <div class=" row">
        <div class="col">
            <h2>List of Competitions</h2>
            <table class=" table table-striped">
                <thead class=" table-dark">
                    <tr>
                        <th scope="col">Name </th>
                        <th scope="col">Start Data </th>
                        <th scope="col">Endt Data</th>
                        <th scope="col">Rating </th>
                        <th scope="col">Full </th>
                        <th scope="col">Country </th>
                        <th scope="col">Type</th>
                        <th scope="col">Status</th>
                    </tr>
                </thead>
                @foreach (var item in competitions)
                {
                    <tbody>
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.StartDate
                            </td>
                            <td>
                                @item.EndtDate
                            </td>
                            <td>
                                @item.IsRated
                            </td>
                            <td>
                                @item.IsFull
                            </td>
                            <td>
                                @item.Country
                            </td>
                            <td>
                                @item.Type
                            </td>
                            <td>
                                @item.Status
                            </td>
                            <td>
                                <button class=" btn-dark" @onclick="(()=>EditCompetition(item))">Edite</button>
                            </td>
                            <td>
                                <button class=" btn-danger" @onclick="(()=>DeleteCompetitionAsync(item))">Delete</button>
                            </td>

                        </tr>
                    </tbody>
                }

            </table>
        </div>
    </div>
</div>

