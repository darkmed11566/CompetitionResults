@inject CompetitionResults.Data.Repository.SportsmanRepository sportsmanRepository;
@page "/addSportsmans"
@using EnumsAndConstants

<div class="row">
    <div class="col">
        <div>
            Name
        </div>
        <input class=" form-control" placeholder="Name" @bind="sportsmanModel.Name" />
        <div>
            SecondName
        </div>
        <input class=" form-control" placeholder="Second Name" @bind="sportsmanModel.SecondName" />
        <div>
            DateOfBirth
        </div>
        <input class=" form-control" type="date" placeholder="Date Of Birth" @bind="sportsmanModel.DateOfBirth " />
        <div>
            Sex
        </div>
        <select class=" form-control" name="Sex" @bind="sportsmanModel.Sex">
            @foreach (var sex in SexForSelect)
            {
                <option value="@sex">
                    @sex;
                </option>
            }
        </select>
        <div>
            Country
        </div>
        <select class=" form-control" name="Country" @bind="sportsmanModel.Country">
            @foreach (var country in CountryForSelect)
            {
                <option value="@country">
                    @country;
                </option>
            }
        </select>
        <div>
            Rang
        </div>
        <select class=" form-control" name="Rang" @bind="sportsmanModel.Rang">
            @foreach (var rang in RangsForSelect)
            {
                <option value="@rang">
                    @rang;
                </option>
            }
        </select>
        <div>
            NameOfClub
        </div>
        <input class=" form-control" placeholder="Name of club" @bind="sportsmanModel.ClubName" />
        <div>
            NamesOfCoachers
        </div>
        <input class=" form-control" placeholder="Names of coachers" @bind="sportsmanModel.CoachName" />
        <div>
            Photo
        </div>
        <input class=" form-control" placeholder="Photo" @bind="sportsmanModel.URLPhoto" />
        <div>
            Achivements
        </div>
        <input class=" form-control" placeholder="Achievements" @bind="sportsmanModel.Achievements" />

        <div class=" col">
            <button class=" btn btn-success" @onclick="SaveSportsman">Save</button>
        </div>
    </div>
</div>

<div class=" container-fluid">
    <div class=" row">
        <div class="col">
            <h2>List of spostsmans</h2>
            <table class=" table table-striped">
                <thead class=" table-dark">
                    <tr>
                        <th scope="col">Name </th>
                        <th scope="col">Second name </th>
                        <th scope="col">Date of Birth</th>
                        <th scope="col">Sex </th>
                        <th scope="col">Country </th>
                        <th scope="col">Rang </th>
                        <th scope="col">Name of club </th>
                        <th scope="col">Names of coachers </th>
                        <th scope="col">URLPhoto</th>
                        <th scope="col">Achievements </th>
                        <th scope="col">Rating</th>

                    </tr>
                </thead>
                @foreach (var item in sportsmans)
                {
                    <tbody>
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.SecondName
                            </td>
                            <td>
                                @item.DateOfBirth
                            </td>
                            <td>
                                @item.Sex
                            </td>
                            <td>
                                @item.Country
                            </td>
                            <td>
                                @item.Rang
                            </td>
                            <td>
                                @item.ClubName
                            </td>
                            <td>
                                @item.CoachName
                            </td>
                            <td>
                                <div>
                                    <img class="image" src="@item.URLPhoto">
                                </div>
                            </td>
                            <td>
                                @item.Achievements
                            </td>
                            <td>
                                @item.Rating
                            </td>
                            <td>
                                <button class=" btn-dark" @onclick="(()=>EditSportsman(item))">Edite</button>
                            </td>
                            <td>
                                <button class=" btn-danger" @onclick="(()=>DeleteSportsmanAsync(item))">Delete</button>
                            </td>
                        </tr>
                    </tbody>
                }

            </table>
        </div>
    </div>
</div>

