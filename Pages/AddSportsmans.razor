@page "/addSportsmans"
@using EnumsAndConstants

            <div class="row">
                <div class="col">
                    <input class=" form-control" placeholder="Name" @bind="newName" />
                    <input class=" form-control" placeholder="Second Name" @bind="newSecondName" />
                    <input class=" form-control" type="date" placeholder="Date Of Birth" @bind="newDateOfBirt " />

                    <select class=" form-control" name="Sex" @bind="newSex">
                        <option value="Male">
                            @Sex.Male
                        </option>
                        <option value="Female">
                            @Sex.Female
                        </option>
                    </select>

                    <select class=" form-control" name="Country" @bind="newCountry">
                        <option value="BLR">
                            @ListOfCountries.BLR
                        </option>
                        <option value="LTV">
                            @ListOfCountries.LTV
                        </option>
                        <option value="RUS">
                            @ListOfCountries.RUS
                        </option>
                    </select>

                    <select class=" form-control" name="Rang" @bind="newRang">
                        <option value="NR">
                            @Rangs.NR
                        </option>
                        <option value="III">
                            @Rangs.III
                        </option>
                        <option value="II">
                            @Rangs.II
                        </option>
                        <option value="I">
                            @Rangs.I
                        </option>
                        <option value="CMS">
                            @Rangs.CMS
                        </option>
                        <option value="MS">
                            @Rangs.MS
                        </option>
                    </select>

                    <input class=" form-control" placeholder="Name of club" @bind="newNameOfClub" />
                    <input class=" form-control" placeholder="Names of coachers" @bind="newNamesOfCoachers" />

                    <div class=" col">
                        <button class=" btn btn-success" @onclick="AddSportsman">Add sportsman</button>
                    </div>
                </div>
            </div>
 
<div class=" container-fluid">
    <div class=" row">
        <div class="col">
            <h2>List of spostsmans</h2>
            <table class=" table table-striped">
                <thead class=" table-dark">
                    <tr>
                        <th scope="col">Name </th>
                        <th scope="col">Second name </th>
                        <th scope="col">Date of Birth</th>
                        <th scope="col">Sex </th>
                        <th scope="col">Country </th>
                        <th scope="col">Rang </th>
                        <th scope="col">Name of club </th>
                        <th scope="col">Names of coachers </th>
                    </tr>
                </thead>
                @foreach (var item in sportsman)
                {
                    <tbody>
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.SecondName
                            </td>
                            <td>
                                @item.DateOfBirth
                            </td>
                            <td>
                                @item.Sex
                            </td>
                            <td>
                                @item.Country
                            </td>
                            <td>
                                @item.Rang
                            </td>
                            <td>
                                @item.NameOfClub
                            </td>
                            <td>
                                @item.NamesOfCoaches
                            </td>
                            <td>
                                <button class=" btn-dark">Edite</button>
                            </td>
                            <td>
                                <button class=" btn-danger" @onclick="(()=>DeleteSportsman(item))">Delete</button>
                            </td>
                        </tr>
                    </tbody>
                }

            </table>
        </div>
    </div>
</div>

@code {
    private IList<Sportsman> sportsman = new List<Sportsman>();

    private string newName;
    private string newSecondName;
    private DateTime newDateOfBirt;
    private Sex newSex;
    private ListOfCountries newCountry;
    private Rangs newRang;
    private string newNameOfClub;
    private string newNamesOfCoachers;

    private void AddSportsman()
    {
        if (newNameOfClub == null)
        {
            newNameOfClub = "Personally";
        }

        sportsman.Add(new Sportsman
        {
            Name = newName,
            SecondName = newSecondName,
            DateOfBirth = newDateOfBirt,
            Sex = newSex,
            Country = newCountry,
            Rang = newRang,
            NameOfClub=newNameOfClub,
            NamesOfCoaches=newNamesOfCoachers,
            IsActive = true
        });

    }

    private void DeleteSportsman(Sportsman deletedSportsman)
    {
        sportsman.Remove(deletedSportsman);
    }
}
